<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- テーマカラー設定 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="テーマカラー"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="16dp" />

            <GridLayout
                android:id="@+id/colorGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="4"
                android:rowCount="3"
                android:layout_marginBottom="32dp">

                <!-- 12色のカラーボタンを動的に追加 -->

            </GridLayout>

            <!-- サイズ設定 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="表示サイズ"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="16dp" />

            <RadioGroup
                android:id="@+id/radioGroupSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/radioSmallSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="小"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp" />

                <RadioButton
                    android:id="@+id/radioMediumSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="中（標準）"
                    android:textColor="#000000"
                    android:checked="true"
                    android:layout_marginBottom="8dp" />

                <RadioButton
                    android:id="@+id/radioLargeSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="大"
                    android:textColor="#000000"
                    android:layout_marginBottom="16dp" />

            </RadioGroup>

            <!-- アーティスト表示設定 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="その他"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp" />

            <CheckBox
                android:id="@+id/checkBoxShowArtist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="アーティスト名を表示"
                android:textColor="#000000"
                android:checked="true"
                android:layout_marginBottom="16dp" />

            <!-- スキン設定 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="スキン設定"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="背景画像"
                    android:textSize="16sp"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/buttonSelectSkin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="画像を選択"
                    android:textSize="14sp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="現在の設定"
                    android:textSize="14sp"
                    android:textColor="#666666" />

                <TextView
                    android:id="@+id/textCurrentSkin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="なし"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:maxWidth="120dp" />

            </LinearLayout>

            <!-- 透明度設定 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="背景の濃さ"
                    android:textSize="16sp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/textSkinOpacity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50%"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:minWidth="40dp"
                    android:gravity="end" />

            </LinearLayout>

            <SeekBar
                android:id="@+id/seekBarSkinOpacity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="50"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/buttonClearSkin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="背景画像をクリア"
                android:textSize="14sp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginBottom="16dp" />

        </LinearLayout>

    </ScrollView>

    <!-- 背景画像（ActionBarより前に配置） -->
    <ImageView
        android:id="@+id/debugImageBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>